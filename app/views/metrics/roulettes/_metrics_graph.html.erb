<%= content_tag :div,
  id: 'roulette-metrics',
  style: 'width: 100%',
  data: {
    columns: @columns.to_json,
    table_entries: @table_data.to_json,
    chart_entries: @chart_data.to_json
  } do %>
  <b-container>
    <canvas id='bubbleplot' width='400' height='400'></canvas>
    <b-row>
      <b-col>
        <b-table :fields=columns :items=table_entries>
          <template #cell(level)="data">
            {{ data.value }}
          </template>
          <template #cell()="data">
            {{ data }}
            ----
            {{ [data['field']['key']] }}
            ----
            {{ data['item']['data'] }}
          </template>
        </b-table>
      </b-col>
    </b-row>
  </b-container>
<% end %>
