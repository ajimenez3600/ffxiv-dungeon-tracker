<div class='container'>
  <%= content_tag :div,
    id: 'roulette-metrics',
    style: 'width: 100%',
    data: { entries: @instance_groups.to_json, columns: @columns.to_json } do %>
    <b-container>
      <canvas id='scatterplot' width='400' height='400'></canvas>
      <b-row>
        <b-col>
          <b-table :fields=columns :items=entries>
            <template #cell(level)="data">
              {{ data.value }}
            </template>
            <template #cell()="data">
              {{ data.value.average }}
            </template>
          </b-table>
        </b-col>
      </b-row>
    </b-container>
  <% end %>
</div>
