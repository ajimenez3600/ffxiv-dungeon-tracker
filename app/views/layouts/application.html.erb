          </b-navbar-nav>

          <!-- Right aligned nav items -->
          <b-navbar-nav class="ml-auto">
            <b-nav-item href="#">Discord</b-nav-item>
            <b-nav-item href="#">Github</b-nav-item>
            <b-nav-item href="#">Ko-fi</b-nav-item>
          </b-navbar-nav>
        </b-collapse>
      </b-navbar>
    </div>

    <%= yield %>
